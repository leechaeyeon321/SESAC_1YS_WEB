<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="https://code.jquery.com/jquery-3.6.1.min.js"
        integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ="
        crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <title>Register</title>
        
        <script>
            function register() {
                var form = document.getElementById("form_register");
                let user = {
                    id: form.id.value,
                    pw: form.pw.value,
                    name: form.name.value
                };
                axios({
                    method: 'post',
                    url: '/user/signup',
                    data: user
                }).then((rep) => {return rep.data;} )
                .then((data) => {
                    alert("회원가입 성공");
                    document.location.href="/user/signin";
                });
            }
        </script>
    </head>
    <body>
        <div class="scene flex">
            <section class="card">
            <h1 class="card__heading">
                <span>Register</span>
            </h1>
            <form class="card__form" id="form_register">
                <label for="ID" class="visually">ID :</label>
                <div><input id="ID" class="card__input" type="text" name="id" required /></div>
                <label for="password" class="visually">Password :</label> <br>
                <input id="password" class="card__input" type="password" name="pw" required /><br>
                <label for="nickname" class="visually">Name : </label> <br>
                <input id="nickname" class="card__input" type="text" name="name" required /><br><br>
                <button class="card__button" type="button" onclick="register();">
                <span>Register</span>
                </button>
            </form>

            <a href="/user/signin">Login</a>
            </section>
        </div>
    </body>
</html>