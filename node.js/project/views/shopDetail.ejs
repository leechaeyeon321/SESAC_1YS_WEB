<html>
    <head>
        <title>storeDetail</title>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
        <link rel='stylesheet' href='https://fonts.googleapis.com/css2?family=Heebo:wght@100;200;300&amp;display=swap'>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
        <link
            rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
        />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
        <link rel="icon" href="./img/mapIcon.PNG">
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <style>
            @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR&display=swap');
             .jm-font{
                 font-family: 'Noto Sans KR', sans-serif;
             }
             body {
                width: 100%;
                align-items: center;
                justify-content: center;
                display: flex;
                flex-direction: column;
             }
            /* 가게 이름 */
            #storeName {
                text-align: center;
                font-size: 2.5rem;
                font-weight: 500;
            }
            /* 가게 정보 */
            #info {
                font-size: 1.7rem;
                padding: 20px;
            }
            #infoDetail {
                font-size: 1.3rem;
            }
            /* 가게 정보 로고 */
            .fish{
                position: inherit;
                width: 70px;
                margin: -10px;
            }
            /* contents 및 별점 남기기 */
            .wrap{
                width: 500px;
                height: 100vh;
                position: relative;
                justify-content: center;
                align-items: center;
            }
            .detail {
                position: absolute;
                display: block;
            }
            /* 평균 */
            .stars {
                position: absolute;
                left: 60%;
                width: 10rem;
            }
            /* 별점 남기기 */
            .regiSTar {
                position: absolute;
                width: 498px; /* 61rem 15.5rem */
                height: 20rem;
                display: none;
            }
            .titleStar {
                font-size: 1.8rem;
                background-color: #FFBF00;
            }
            #starPeople {
                display: none;
            }
            .sPid {
                font-size: 1.8rem;
            }
            #starPeopleStars {
                width: 150px;
            }
            /* 누르는 별점 */
            .star-rating {
            border:solid 1px #ccc;
            display:flex;
            flex-direction: row-reverse;
            font-size:3em;
            justify-content:space-around;
            padding:0 .2em;
            text-align:center;
            width:10px;
            }
            .star-rating input {
            display:none;
            }
            .star-rating label {
            color:#ccc;
            cursor:pointer;
            }
            .star-rating :checked ~ label {
            color:#f90;
            }
            .star-rating label:hover,
            .star-rating label:hover ~ label {
            color:#fc0;
            }
            .starCard {
                border-color: transparent;
                position: absolute;
                left: 35%;
                top: 43%;
            }
            .starRegi {
                position: absolute;
                border-radius: 50px;
                left: 65%;
                top: 50%;
                font-size: 1.5rem;
            }
            /* 버튼 */
            .button {
                padding-left: 10px;
                padding-right: 10px;
                position: relative;
            }
            .button > button {
                background-color : #FFBF00;
                font-size: 1.5rem;
            }
            #home {
                width: 45px; 
                position: absolute; 
                left: 43%; 
            }
        </style>

    </head>
    <body>
        <div class="divdiv">
            <div class="wrap">
                <div class="scene flex detail jm-font">
                    <div class="card dororo">
                        <img src="/static/img/IMG_0652.PNG" class="card-img-top animate__animated animate__tada"alt="..."><!-- 아이콘 부분 -->
                        <div class="card-body">
                        <h5 class="card-title jm-font" name="storeName" id="storeName"><%=data.storeName%></h5>
                        <p class="card-text"></p>
                       </div>
                        <ul class="list-group list-group-flush">
                        <li class="list-group-item" id="info" onclick="stars();"><img src="/static/img/IMG_0652.PNG" class="fish" alt="...">평점
                            <ol style="float: right;" id = "average" ><img src="/static/img/<%=Math.round(ratingAVG)%>.png" alt=""class="stars" id="stars"><span id="aa"><%=ratingAVG%></span></ol>
                        </li>
                        <div id="starPeople">
                            <li class="list-group-item" id="info"><img src="/static/img/IMG_0652.PNG" class="fish" alt="...">별점을 남긴 사람들
                                <button type="button" class="btn-close" aria-label="Close" onclick="starPeopleClose();"style="float: right; font-size: 1.3rem;"></button><br><br>
                                <div class="row">
                                    <%for(var i = 0; i<ratinglist.length; i++) {%>
                                        <div class="col-sm-12">
                                            <div class="card">
                                              <div class="card-body">
                                                <h5 class="card-title sPid"><%=ratinglist[i].User_nickName%></h5>
                                                <p class="card-text sPstar"><img src="/static/img/<%=ratinglist[i].star%>.png" alt=""id="starPeopleStars"></p>
                                              </div>
                                            </div>
                                          </div>
                                    <% } %>
                                </div>
                            </li>
                        </div>
                        <li class="list-group-item" id="info"><img src="/static/img/IMG_0652.PNG" class="fish" alt="...">메뉴<br>
                            <% if(menu2) { %>
                                <ol style="float: right;" id="infoDetail"><%=menu1.menuName%> <%=menu1.price%></ol>
                                <br><ol style="float: right;" id="infoDetail"><%=menu2.menuName%> <%=menu2.price%></ol>
                            <% } else { %>
                                <ol style="float: right;" id="infoDetail"><%=menu1.menuName%> <%=menu1.price%></ol>
                            <% } %>
                            
                        </li>
                        <li class="list-group-item" id="info"><img src="/static/img/IMG_0652.PNG" class="fish" alt="...">이용 요일
                            <ol style="float: right;" id="infoDetail">Open: <%=data.operatingTime%></ol>
                        </li>
                        </ul>
                        <div class="card-body buttons">
                            <button type="button" class="btn" id="recordStar" style="margin-right: 60px;">별점 남기기</button>
                            <img src="/static/img/home.png" class="card-img-top animate__animated animate__bounceIn" id="home" onclick="home();"><!-- 홈화면 이동 -->
                            <button type="button" class="btn btn-warning" style="margin-left: 60px;" onclick="edit('<%=data.id%>');">가게 수정하기</button>
                        </div>
            </div>
            <div class="card text-dark bg-light mb-3 regiSTar jm-font" id="div2">
                <div class="card-header titleStar"><img src="/static/img/IMG_0652.PNG" class="fish" alt="...">별점 남기기
                    <button type="button" class="btn-close" aria-label="Close" onclick="regiStarClose();"style="float: right; font-size: 1.3rem;"></button></div>
                    <div class="card-body contentStar">
                        <form id="form_star">
                            <div class="star-rating starCard" id="star">
                                <input type="radio" id="5-stars" name="rating" value="5" />
                                <label for="5-stars" class="star">&#9733;</label>
                                <input type="radio" id="4-stars" name="rating" value="4" />
                                <label for="4-stars" class="star">&#9733;</label>
                                <input type="radio" id="3-stars" name="rating" value="3" />
                                <label for="3-stars" class="star">&#9733;</label>
                                <input type="radio" id="2-stars" name="rating" value="2" />
                                <label for="2-stars" class="star">&#9733;</label>
                                <input type="radio" id="1-star" name="rating" value="1" />
                                <label for="1-star" class="star">&#9733;</label>
                            </div>
                            <button type="button" class="btn btn-warning starRegi" onclick="regiStar();">등록</button>
                        </form>
                    </div>
                </div>
            </div>
            <div>
                <span>
                    <input
                      style="font-size: 15px; width: 300px; font-weight: bold; display: none;"
                      class="form-control"
                      type="text"
                      value="<%=data.address%>"
                      name="address"
                      aria-label="Disabled input example"
                      disabled
                      readonly
                    />
                  </span>
            </div>
            <div>
               <span>
                 <input
                   style="font-size: 15px; width: 300px; font-weight: bold; display: none;"
                   class="form-control2"
                   type="text"
                   value="<%=data.latitude%>"
                   aria-label="Disabled input example"
                   disabled
                   readonly
                 />
               </span>
             </div>
             <div>
               <span>
                 <input
                   style="font-size: 15px; width: 300px; font-weight: bold; display: none;"
                   class="form-control3"
                   type="text"
                   value="<%=data.longitude%>"
                   aria-label="Disabled input example"
                   disabled
                   readonly
                 />
               </span>
               </div>
        </div>
    </div>    
        <script>
            function stars() {
                let starPeople = document.getElementById("starPeople");
                if (starPeople.style.display == "none") {
                    starPeople.style.display = "block";
                } else { 
                    starPeople.style.display = "none";
                }
            }
            stars();
            function starPeopleClose(){
                let starPeople = document.getElementById("starPeople");
                starPeople.style.display = "none";
            }
            starPeopleClose();
            function recordStar() {
                let button = document.querySelectorAll("button")[1];
                
                button.addEventListener("click", function(){
                    let content = document.querySelector("#div2");
                    if (content.style.display == "none") {
                        content.style.display = "block";
                        button.style.backgroundColor = "#F7D358"
                    } else { 
                        content.style.display = "none";
                        button.style.backgroundColor = "#FFBF00";
                    }
                })
            }
            recordStar();
            function regiStarClose() {
                let button = document.querySelectorAll("button")[1];
                let content = document.querySelector("#div2");
                content.style.display = "none";
                button.style.backgroundColor = "#FFBF00"
            }
            regiStarClose();
            /* 1. regiStar 버튼을 누르면  */
            let cnt = 0;
            function regiStar() {
                cnt++;
                let star = document.querySelectorAll("#star");
                let rating = {
                    rating: star.star.value
                }
                axios({
                    method: 'post',
                    url: '/store/star',
                    data: rating
                })
                .then(() => {
                    alert("별점 남기기 성공");
                    document.querySelector("#div2").style.display = "none";
                })
                .then((rating)=>{
                    const row = document.getElementById("row");
                    const temp = document.createElement("div");
                    if(rating == 1) {
                        temp.innerHTML = `<div class="col-sm-12">
                        <div class="card">
                        <div class="card-body">
                            <h5 class="card-title sPid">id</h5>
                            <p class="card-text sPstar"><img src="./img/1.PNG" alt=""id="starPeopleStars"></p>
                        </div>
                        </div>
                        </div>`;
                        row.append(temp);
                    } else if(rating == 2) {
                        temp.innerHTML = `<div class="col-sm-12">
                        <div class="card">
                        <div class="card-body">
                            <h5 class="card-title sPid">id</h5>
                            <p class="card-text sPstar"><img src="./img/2.PNG" alt=""id="starPeopleStars"></p>
                        </div>
                        </div>
                        </div>`;
                        row.append(temp);
                    } else if(rating == 3) {
                        temp.innerHTML = `<div class="col-sm-12">
                        <div class="card">
                        <div class="card-body">
                            <h5 class="card-title sPid">id</h5>
                            <p class="card-text sPstar"><img src="./img/3.PNG" alt=""id="starPeopleStars"></p>
                        </div>
                        </div>
                        </div>`;
                        row.append(temp);
                    } else if(rating == 4) {
                        temp.innerHTML = `<div class="col-sm-12">
                        <div class="card">
                        <div class="card-body">
                            <h5 class="card-title sPid">id</h5>
                            <p class="card-text sPstar"><img src="./img/4.PNG" alt=""id="starPeopleStars"></p>
                        </div>
                        </div>
                        </div>`;
                        row.append(temp);
                    } else {
                        temp.innerHTML = `<div class="col-sm-12">
                        <div class="card">
                        <div class="card-body">
                            <h5 class="card-title sPid">id</h5>
                            <p class="card-text sPstar"><img src="./img/5.PNG" alt=""id="starPeopleStars"></p>
                        </div>
                        </div>
                        </div>`;
                        row.append(temp);
                    }
                })
                .then((req) => {
                    let stars = document.getElementById('stars').src
                    if(req.ratingAVG >= 5){
                        stars.innerText= "./img/5.PNG"
                        document.getElementById("aa").innerText = req.ratingAVG
                    } else if ( 5 > req.ratingAVG >=4.5 ){
                        stars.innerText= "./img/4.5.PNG"
                        document.getElementById("aa").innerText = req.ratingAVG
                    } else if ( 4.5 > req.ratingAVG >=4 ){
                        stars.innerText= "./img/4.PNG"
                        document.getElementById("aa").innerText = req.ratingAVG
                    } else if ( 4 > req.ratingAVG >=3.5 ){
                        stars.innerText= "./img/3.5.PNG"
                        document.getElementById("aa").innerText = req.ratingAVG
                    } else if ( 3.5 > req.ratingAVG >=3 ){
                        stars.innerText= "./img/3.PNG"
                        document.getElementById("aa").innerText = req.ratingAVG
                    } else if ( 3 > req.ratingAVG >=2.5 ){
                        stars.innerText= "./img/2.5.PNG"
                        document.getElementById("aa").innerText = req.ratingAVG
                    } else if ( 2.5 > req.ratingAVG >=2 ){
                        stars.innerText= "./img/2.PNG"
                        document.getElementById("aa").innerText = req.ratingAVG
                    } else if ( 2 > req.ratingAVG >1.5 ){
                        stars.innerText= "./img/1.5.PNG"
                        document.getElementById("aa").innerText = req.ratingAVG
                    } else if ( 1.5 > req.ratingAVG >=1 ){
                        stars.innerText= "./img/1.PNG"
                        document.getElementById("aa").innerText = req.ratingAVG
                    } else if ( 1 > req.ratingAVG >=0.5 ){
                        stars.innerText= "./img/0.5.PNG"
                        document.getElementById("aa").innerText = req.ratingAVG
                    } else {
                        stars.innerText= "./img/0.PNG"
                        document.getElementById("aa").innerText = req.ratingAVG
                    } 
                })
            }
            function home() {
                window.location.href = "/map"
            }
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    </body>
</html>